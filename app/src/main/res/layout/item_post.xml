<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_post_image"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/item_post_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_weight="1"
        android:text="MSI GF63" />
    <TextView
        android:id="@+id/description_post_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10dp"
        android:layout_weight="1"
        android:text="Description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag_type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MSI GF63"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tag_value1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:text="MSI GF63"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:text="MSI GF63"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tag_value2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MSI GF63"
            android:visibility="gone"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag_type3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MSI GF63"
            android:visibility="gone"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tag_value3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:text="MSI GF63"
            android:textSize="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="20,000,000" />
    <Button
        android:id="@+id/edit_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:backgroundTint="@color/blue_500"
        android:text="Edit" />

</LinearLayout>