<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepositActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"

                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    app:srcCompat="@mipmap/ic_logo_foreground" />

                <ImageView
                    android:id="@+id/blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="profile_event"
                    android:clickable="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/view_his_dep_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:onClick="view_dep_his_event"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/teal_200"
                    android:text="View deposit history"
                    android:textColor="@color/black_500" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_next_right_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Deposit Instruction"
                android:textColor="@color/teal_700"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:maxLines="4"
                android:text="Deposit money by send fund to our bank account (state below)
\n WITH \n DESCRIPTION AS FOLLOWING :"
                android:textAlignment="center"
                android:textColor="@color/black_500"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/saf3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:text="CustomerEmail_CustomerName"
                android:textAlignment="center"
                android:textColor="@color/black_500"
                android:textSize="23dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    app:srcCompat="@drawable/warn_icon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:maxLines="5"
                    android:text="WARNING!!! \n NOT FOLLOW INSTRUCTION WILL RESULT IN LOSING YOUR FUND"
                    android:textColor="#D00000"
                    android:textSize="17dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For Example: datdo123@gmail.com_DoThanhDat"
                android:textAlignment="center"
                android:textColor="@color/black_500"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/fullname_banner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Account number"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_no_padding"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="10dp"
                    android:text="1011 2331 125"
                    android:textColor="@color/black_500"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/copy_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/copy_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/fullname_bannerww"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Account name"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_no_padding"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/fullnamee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="10dp"
                    android:text="NGUYEN LE THI DIEU"
                    android:textColor="@color/black_500"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/bank"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Bank name"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_no_padding"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/bak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="VIETCOMBANK"
                    android:textColor="@color/black_500"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/branch"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Branch"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_no_padding"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/br"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="10dp"
                    android:text="LE QUANG DINH"
                    android:textColor="@color/black_500"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:maxLines="2"
                android:text="Any problem please contact: \nsecondhandtechshop@gmail.com"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="16dp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>