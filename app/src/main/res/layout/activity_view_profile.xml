<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfileActivity">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:onClick="backToHome_event"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    app:srcCompat="@mipmap/ic_logo_foreground" />

                <ImageView
                    android:id="@+id/blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="My Profile"
                android:textColor="@color/teal_700"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"

                android:layout_margin="10dp"
                app:srcCompat="@drawable/avatar" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wallet_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/border"
                    app:srcCompat="@drawable/ic_baseline_account_balance_wallet_24" />

                <HorizontalScrollView
                    android:layout_width="150dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:background="@drawable/money_color"
                        android:gravity="center"
                        android:minWidth="150dp"
                        android:text="100.000.000"
                        android:textColor="@color/black_500"
                        android:textSize="23dp" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/vnd_color"
                    android:gravity="center"
                    android:text="VND"
                    android:textColor="@color/black_500"
                    android:textSize="23dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/fullname_banner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Full Name"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fullname"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="Nguyễn Văn A"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/email_banner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Email"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="kietxxxx@gmail.com"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/phone_banner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Phone Number"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="090xxxx02312"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/address_banner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:text="Address"
                android:textColor="@color/black_500"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/border"
                android:text="2xx/x Wall Street, District 9"
                android:textSize="30dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/edit_profile_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/blue_500"
                    android:text="Edit Profile"

                    />
                <Button
                    android:id="@+id/edit_profile_button1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/blue_500"
                    android:text="My Post"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <Button
                    android:id="@+id/edit_profile_button2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/blue_500"
                    android:text="Deposit"
                    />
            </LinearLayout>



            <Button
                android:id="@+id/logout_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="logout_event"
                android:backgroundTint="@color/blue_500"
                android:text="Logout" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>