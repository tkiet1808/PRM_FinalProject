    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"

                android:scaleX="3"
                android:scaleY="3"
                app:srcCompat="@mipmap/ic_logo_foreground"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Login Page"
                android:textColor="@color/black_500"
                android:textSize="35dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="10dp"
                app:boxBackgroundColor="#f8f9fa"
                app:boxStrokeColor="@color/yellow_500"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:counterMaxLength="15"
                app:hintTextColor="@drawable/text_input_hint_selector"
                android:hint="Email"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                app:boxBackgroundColor="#f8f9fa"
                app:boxStrokeColor="@color/yellow_500"
                app:errorEnabled="true"
                app:hintTextColor="@drawable/text_input_hint_selector"
                android:hint="Password"
                android:text="Password"
                android:textSize="24dp"
                app:endIconMode="password_toggle">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:backgroundTint="@color/yellow_500"
                android:text="LOGIN"
                android:textColor="@color/black_500"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Forgot password? Click here"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Or Use"
                android:textSize="16dp"
                android:layout_marginTop="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >


                <Button
                    android:id="@+id/login_with_gmail_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/google_icon"
                    android:text="Login with Gmail"
                    android:textAlignment="viewEnd"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black_500"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/black_500"
                    app:strokeWidth="2dp"
                    />

                <!-- Login with Phone button -->
                <Button
                    android:id="@+id/login_with_phone_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/phone_icon"
                    android:text="Login with Phone"
                    android:textAlignment="viewEnd"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black_500"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/black_500"
                    app:strokeWidth="2dp"

                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="60dp"
                >
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Don't have an account?"
                    android:textSize="16dp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/clickToSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Register now"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue_700"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>